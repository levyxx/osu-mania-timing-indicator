{
  "name": "osu-mania-timing-indicator",
  "version": "1.0.3",
  "description": "Fast/Slow timing indicator overlay for osu!mania",
  "main": "dist/main/main.js",
  "scripts": {
    "copy-html": "mkdir -p dist/renderer && cp src/renderer/*.html dist/renderer/",
    "copy-html:win": "if not exist dist\\renderer mkdir dist\\renderer && copy src\\renderer\\*.html dist\\renderer\\",
    "build": "tsc",
    "build:full": "npm run build && npm run copy-html",
    "build:win": "npm run build && npm run copy-html:win",
    "start": "npm run build && electron .",
    "dev": "tsc && cross-env ELECTRON_DISABLE_SECURITY_WARNINGS=true electron .",
    "watch": "tsc -w",
    "package": "npm run build:full && electron-builder",
    "package:win": "npm run build:win && electron-builder --win"
  },
  "keywords": [
    "osu",
    "mania",
    "timing",
    "indicator",
    "overlay"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "pkg": "^5.8.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "ws": "^8.14.2"
  },
  "build": {
    "appId": "com.osu.timing-indicator",
    "productName": "osu! Timing Indicator",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "osu! Timing Indicator",
      "allowElevation": true,
      "runAfterFinish": false,
      "include": "build/installer.nsh"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
