{
  "name": "osu-mania-timing-indicator",
  "version": "1.0.0",
  "description": "Fast/Slow timing indicator overlay for osu!mania",
  "main": "dist/main/main.js",
  "scripts": {
    "copy-html": "mkdir -p dist/renderer && cp src/renderer/*.html dist/renderer/",
    "copy-html:win": "if not exist dist\\renderer mkdir dist\\renderer && copy src\\renderer\\*.html dist\\renderer\\",
    "build": "tsc",
    "build:full": "npm run build && npm run copy-html",
    "start": "npm run build && electron .",
    "dev": "tsc && cross-env ELECTRON_DISABLE_SECURITY_WARNINGS=true electron .",
    "watch": "tsc -w",
    "package": "npm run build:full && electron-builder",
    "package:win": "npm run build:full && electron-builder --win",
    "package:linux": "npm run build:full && electron-builder --linux",
    "package:mac": "npm run build:full && electron-builder --mac"
  },
  "keywords": [
    "osu",
    "mania",
    "timing",
    "indicator",
    "overlay"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "ws": "^8.14.2",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.osu.timing-indicator",
    "productName": "osu! Timing Indicator",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "README.md",
        "to": "README.md"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "osu! Timing Indicator"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    }
  }
}
